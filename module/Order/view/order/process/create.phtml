<?php
$form->setAttribute('action', $this->url('create-order'))
    ->prepare();
echo $this->form()->openTag($form);
?>

<?php
$fileTransferRequest = $form->get('file_transfer_request');
$user = $fileTransferRequest->get('user');
$logicalConnection = $fileTransferRequest->get('logical_connection');

$viewFieldsets = [
    'billing' => [
        'fileTransferRequest' => [
            'id',
            'change_number',
            'application_number'
        ],
        'logicalConnection' => [
            'id',
            'type'
        ],
        'user' => [
            'id',
            'username'
        ]
    ]
];

?>

<div id="fieldset-billing" class="fieldset-container col-md-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title"><?php echo $this->translate('Billing'); ?></h3>
        </div>
        <div class="panel-body">
        <?php foreach ($viewFieldsets['billing'] as $realFieldsetName => $realFieldset) : ?>
            <?php foreach ($realFieldset as $elementName) : ?>
                <?php if($$realFieldsetName->get($elementName)->getAttribute('type') === 'hidden') : ?>
                    <div class="hidden;"><?php echo $this->formElement($$realFieldsetName->get($elementName)); ?></div>
                <?php elseif($$realFieldsetName->get($elementName)->getAttribute('type') !== 'hidden') : ?>
                    <div class="form-group col-md-6">
                        <label><?php echo $this->translate($$realFieldsetName->get($elementName)->getLabel()); ?></label>
                        <?php echo $this->formElement($$realFieldsetName->get($elementName)); ?>
                        <?php if ($this->formElementErrors($$realFieldsetName->get($elementName))) : ?>
                            <div class="message-error"><?php echo $this->formElementErrors($$realFieldsetName->get($elementName)) ?></div>
                        <?php endif; ?>
                    </div>
                <?php endif; ?>
            <?php endforeach; ?>
        <?php endforeach; ?>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="controls"><?php echo $this->formElement($form->get('submit')); ?></div>
</div>

<?php
echo $this->form()->closeTag();
?>
